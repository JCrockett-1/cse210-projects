public class ChecklistGoal : Goal
{
    private int _bonusPoints;
    private int _targetCount;
    private int _currentCount;

    public ChecklistGoal(int points, string name, string description, int bonusPoints, int targetCount) : base(points, name, int)

    public override void RecordEvent()
    {

    }
    public override void DisplayGoal()
    {
        if (_currentCount == _targetCount)
        {
            Console.WriteLine($"[X] {_name} ({_description}) -- Currently completed: {_currentCount}/{_targetCount}");
        }
        else
        {
            Console.WriteLine($"[ ] {_name} ({_description}) -- Currently completed: {_currentCount}/{_targetCount}");
        }
    }
}